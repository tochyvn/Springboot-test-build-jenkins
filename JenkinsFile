pipeline {

    agent any
    tools { 
        jdk 'JDK8u212' 
        maven 'Maven' 
    }
    stages {

    stage('Build') {
	    steps {
    	    script {
		 image_name = "overview-project"
		 archive_name = "${image_name}.tgz"
                 sh "sudo ls -la"
                 sh "java -version"
		 sh "mvn --version"
		 sh 'echo "PATH = ${PATH}"'
                 sh 'echo "M2_HOME = ${M2_HOME}"'
		 sh 'mvn clean package'
		 
	     }
   	        
        }
    }
    
    stage('SSH transfer') {
    	 env.SSH_CONFIG_NAME = "overview-aws-ec2"
	 path_to_file = "/"
	 file_name = "/tochap"
	 remote_dir_path = "/test"
	 script {
	  sshPublisher(
	   continueOnError: false, failOnError: true,
	   publishers: [
	    sshPublisherDesc(
	     configName: "${env.SSH_CONFIG_NAME}",
	     verbose: true,
	     transfers: [
	      sshTransfer(
	       sourceFiles: "${path_to_file}/${file_name}, ${path_to_file}/${file_name}",
	       removePrefix: "${path_to_file}",
	       remoteDirectory: "${remote_dir_path}",
	       execCommand: "run commands after copy?"
	      )
	     ])
	   ])
	 }
}

    stage('Clean') {
	 steps {
		script {
			sh "sudo ls -la"
			}
		}
	}
}
    post {
	always {
		cleanWs()
		}
	}
}

